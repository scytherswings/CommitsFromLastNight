<div class="page-header">
  <h1>Listing commits</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Username</th>
            <th>User avatar</th>
            <th>Message</th>
            <th>Commit time</th>
            <th>Repository</th>
            <th>Branch</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @commits) do |commit| %>
            <td><%= commit.username %></td>
            <td><%= commit.user_avatar %></td>
            <td><%= commit.message %></td>
            <td><%= commit.commit_time %></td>
            <td><%= commit.repository %></td>
            <td><%= commit.branch %></td>
      <% end %>
    </tbody>
  </table>
</div>
