<div class="page-header">
  <%= link_to new_white_list_word_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New White list word
  <% end %>
  <h1>Listing white_list_words</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @white_list_words) do |white_list_word| %>
            <td><%= link_to 'Show', white_list_word %></td>
        <td><%= link_to 'Edit', edit_white_list_word_path(white_list_word) %></td>
        <td><%= link_to 'Destroy', white_list_word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
