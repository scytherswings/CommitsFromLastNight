<% provide(:title, @repository.name) %>
<div class="row">
    <h1>
      <%= link_to(image_tag(@repository.image_uri, class: 'profile_avatar'), @repository.resource_uri) %><%= @repository.name %>
    </h1>
    <p class="small"><%= @repository.description %></p>
  <div class="table-responsive">
    <table class="table table-hover table-condensed">
      <thead>
      <tr>
        <th>Total Commits</th>
        <th>Languages</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @repository.commits.size %></td>
        <td><%= @repository.repository_languages.try(:map) { |repository_language| repository_language.word.value }.join(', ') %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="table-responsive">
    <table class="table table-hover sortable table-condensed">
      <thead>
      <tr>
        <th>User</th>
        <th>Commits</th>
        <th>Time</th>
        <th>Latest&nbsp;Commit</th>
      </tr>
      </thead>
      <tbody>
      <%= render partial: 'users/repository_user', collection: @repository_users %>
      </tbody>
    </table>
    <%= will_paginate(@repository_users, partial: 'users/repository_user') %>
  </div>
</div>
