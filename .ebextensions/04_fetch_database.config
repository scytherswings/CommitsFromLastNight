Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["clfn-stage", "clfn-prod"]
          roleName: "aws-elasticbeanstalk-ec2-role"

files:
  "/tmp/beanstalk-database-stage.json" :
    mode: "000644"
    owner: root
    group: root
    authentication: "S3Auth"
    source: https://s3.amazonaws.com/cfln-stage/configuration/beanstalk-database-stage.json

  "/tmp/beanstalk-database-prod.json" :
    mode: "000644"
    owner: root
    group: root
    authentication: "S3Auth"
    source: https://s3.amazonaws.com/cfln-prod/configuration/beanstalk-database-prod.json
